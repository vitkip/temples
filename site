│   └── search.php              # ค้นหาสมาชิก
│
├── users/                      # การจัดการผู้ใช้ระบบ
│   ├── index.php               # แสดงรายชื่อผู้ใช้
│   ├── add.php                 # เพิ่มผู้ใช้ใหม่
│   ├── edit.php                # แก้ไขข้อมูลผู้ใช้
│   ├── view.php                # ดูรายละเอียดผู้ใช้
│   ├── delete.php              # ลบผู้ใช้
│   ├── change_password.php     # เปลี่ยนรหัสผ่าน
│   └── permissions.php         # กำหนดสิทธิ์การใช้งาน
│
├── reports/                    # ระบบรายงาน
│   ├── index.php               # หน้าหลักของรายงาน
│   ├── temples.php             # รายงานวัด
│   ├── monks.php               # รายงานพระสงฆ์
│   ├── events.php              # รายงานกิจกรรม
│   ├── subscriptions.php       # รายงานการสมัครสมาชิก
│   ├── subscription_pdf.php    # PDF รายงานการสมัครสมาชิก
│   ├── financial.php           # รายงานการเงิน
│   └── export/                 # ส่งออกข้อมูลในรูปแบบต่างๆ
│       ├── excel.php           # ส่งออกเป็น Excel
│       ├── pdf.php             # ส่งออกเป็น PDF
│       └── csv.php             # ส่งออกเป็น CSV
│
├── settings/                   # การตั้งค่าระบบ
│   ├── index.php               # หน้าหลักการตั้งค่า
│   ├── general.php             # ตั้งค่าทั่วไป
│   ├── email.php               # ตั้งค่าอีเมล
│   ├── security.php            # ตั้งค่าความปลอดภัย
│   └── backup.php              # สำรองและคืนค่าข้อมูล
│
